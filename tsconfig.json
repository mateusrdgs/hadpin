{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "paths": {
      "contracts/*": ["contracts/*"],
      "controllers/*": ["controllers/*"],
      "database/*": ["database/*"],
      "routes/*": ["routes/*"],
      "services/*": ["services/*"],
      "application/*": ["application/*"],
      "server/*": ["server/*"]
    },
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
