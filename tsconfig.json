{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["./*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
